generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  TEACHER
  USER
  ADMIN
}
model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  username String @unique
  firstname String
  lastname String
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  updaDatedAt DateTime @updatedAt @default(now())
  isActive Boolean @default(true)
  refreshToken String?
}